<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@color/background_light"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartItemBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roller Rabbit"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Vado Odelle Dress"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_body" />

            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="$198.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_search"
                android:orientation="horizontal"
                android:padding="4dp"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/btnDecreaseCart"
                    android:layout_width="28dp"
                    android:layout_height="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="âˆ’"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvCartItemQuantity"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="sans-serif-medium" />

                <FrameLayout
                    android:id="@+id/btnIncreaseCart"
                    android:layout_width="28dp"
                    android:layout_height="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_circle_black">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete"
                app:tint="@color/white" />
        </FrameLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
